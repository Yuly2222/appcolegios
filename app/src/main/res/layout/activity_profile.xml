<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Card con información del estudiante -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/academicCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Foto de perfil -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="@string/foto_perfil_cd"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre -->
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Rol -->
                <TextView
                    android:id="@+id/roleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/role_na"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/on_surface_variant"
                    android:layout_marginVertical="16dp" />

                <!-- Información del estudiante -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/curso_y_grupo"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/courseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_course_group"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numero_lista"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/listNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_list_number"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_nacimiento_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/birthdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_birthdate"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grupo_sanguineo_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bloodTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_blood_type"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correo_institucional_full"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_email"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acudiente_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/guardianText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_guardian"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telefono_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_phone"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_address"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eps_full"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/epsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_eps"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado_matricula_full"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/enrollmentStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_enrollment_status"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promedio_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/averageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_average"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card para PADRE: email (no editable), teléfono editable, selector de hijo y botón Agregar información -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/parentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_selected_child"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/parentChildText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no_children"
                        android:textColor="@color/on_surface"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/selectChildButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_email_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/parentEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_email"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telefono_label"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/parentPhoneEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:hint="@string/hint_parent_phone"
                        android:autofillHints="phone" />

                    <Button
                        android:id="@+id/saveParentPhoneButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="12dp" />

                <Button
                    android:id="@+id/addInfoButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/add_information"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Mi información académica -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/academicInfoButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/my_academic_information"
            android:textSize="16sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:elevation="2dp" />

    </LinearLayout>
</ScrollView>
