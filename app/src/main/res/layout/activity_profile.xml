<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Card con información del estudiante -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Foto de perfil -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Foto de perfil"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre -->
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Estudiante"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/on_surface_variant"
                    android:layout_marginVertical="16dp" />

                <!-- Información del estudiante -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curso y Grupo:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/courseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10° - Grupo A"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº de lista:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/listNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/birthdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2008"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo sanguíneo:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bloodTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo institucional:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="estudiante@colegio.edu.co"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acudiente(s):"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/guardianText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Acudiente"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 123 4567"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle 123 #45-67"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EPS:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/epsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EPS Salud"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de matrícula:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/enrollmentStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promedio:"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/averageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Mi información académica -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/academicInfoButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Mi información académica"
            android:textSize="16sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:elevation="2dp" />

    </LinearLayout>
</ScrollView>
