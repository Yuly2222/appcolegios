rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rol del usuario (si está autenticado) para discriminar estudiantes
    function userRole() {
      return request.auth != null
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    // 1) ÚNICA RESTRICCIÓN: Estudiante solo puede leer sus propias notas
    match /grades/{gradeId} {
      // Si el rol NO es ESTUDIANTE, permitir; si ES ESTUDIANTE, solo si es el dueño del studentId
      allow read: if userRole() != 'ESTUDIANTE' || (request.auth != null && resource.data.studentId == request.auth.uid);
      // Mantener escrituras como antes (abiertas)
      allow write: if true;
    }

    // 2) TODO LO DEMÁS ABIERTO (como antes) para colecciones usadas por la app
    match /users/{uid} {
      allow read, write: if true;
      match /{subpath=**} { allow read, write: if true; }
    }

    match /students/{uid} {
      allow read, write: if true;
      match /{subpath=**} { allow read, write: if true; }
    }

    match /teachers/{uid} {
      allow read, write: if true;
      match /{subpath=**} { allow read, write: if true; }
    }

    match /tasks/{taskId} { allow read, write: if true; }
    match /schedule/{id}   { allow read, write: if true; }
    match /pagos/{pagoId}  { allow read, write: if true; }

    match /courses/{courseId} {
      allow read, write: if true;
      match /{subpath=**} { allow read, write: if true; }
    }

    match /attendance/{docId}              { allow read, write: if true; }
    match /attendance_transport/{docId}    { allow read, write: if true; }
    match /transportAttendance/{docId}     { allow read, write: if true; }

    match /publicProfiles/{uid} { allow read, write: if true; }

    match /chats/{chatId} {
      allow read, write: if true;
      match /messages/{msgId} { allow read, write: if true; }
    }
  }
}
